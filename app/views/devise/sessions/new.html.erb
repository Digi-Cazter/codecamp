<div id="login_container">
  <div id="login_form">
    <h1>SIGN IN</h1>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.label :email %><br />
      <%= f.email_field :email %><br /><br />
      <%= f.label :password %><br />
      <%= f.password_field :password %><br /><br />
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <%= f.submit "Sign in" %>
    <% end %>
  </div>
  <div id="sign_up">
    <h1>NEW TO ONYX?</h1>
    <p>Register by clicking the link below to start creating interview projects.</p>
    <p><%= render "devise/shared/links" %></p>
  </div>
  <div id="sign_up_form" style="display: none;">
  </div>
</div>

<script type="text/javascript">
  snapToCenter("login_container");
</script>
